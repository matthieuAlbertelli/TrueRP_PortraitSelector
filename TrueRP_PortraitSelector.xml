<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="PortraitSelectorFrame" hidden="true" parent="UIParent" movable="true" enableMouse="true" frameStrata="DIALOG">
        <Size><AbsDimension x="400" y="400"/></Size>
        <Anchors><Anchor point="CENTER"/></Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                  edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
                  tile="true" tileSize="32" edgeSize="32">
            <BackgroundInsets left="11" right="12" top="12" bottom="11"/>
        </Backdrop>
        <Frames>
            <Button name="SaveButton" inherits="UIPanelButtonTemplate">
                <Size><AbsDimension x="100" y="25"/></Size>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT"><Offset x="-20" y="-20"/></Anchor>
                </Anchors>
                <Text>Sauvegarder</Text>
                <Scripts>
                    <OnClick>PortraitSelector_Save()</OnClick>
                </Scripts>
            </Button>

            <Frame name="RaceDropDown" inherits="UIDropDownMenuTemplate">
                <Anchors><Anchor point="TOPLEFT"><Offset x="20" y="-20"/></Anchor></Anchors>
            </Frame>

            <Frame name="ClassDropDown" inherits="UIDropDownMenuTemplate">
                <Anchors><Anchor point="LEFT" relativeTo="RaceDropDown" relativePoint="RIGHT"><Offset x="120" y="0"/></Anchor></Anchors>
            </Frame>

            <ScrollFrame name="PortraitSelectorFrameScroll" inherits="UIPanelScrollFrameTemplate">
                <Size><AbsDimension x="360" y="300"/></Size>
                <Anchors><Anchor point="BOTTOM" relativePoint="BOTTOM"><Offset x="0" y="20"/></Anchor></Anchors>
                <Frames>
                    <Frame name="PortraitSelectorFrameScrollChild">
                        <Size><AbsDimension x="360" y="1000"/></Size>
                    </Frame>
                </Frames>
                <ScrollChild>PortraitSelectorFrameScrollChild</ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad>PortraitSelector_OnLoad(self)</OnLoad>
        </Scripts>
    </Frame>
</Ui>
